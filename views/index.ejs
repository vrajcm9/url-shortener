<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>

        <form action="/shortURLs" method="POST" class="form-inline my-4">
            <label for="fullURL" class="sr-only">URL</label>
            <input type="url" placeholder="Please enter URL" name="fullURL" id="fullURL" class="form-control mr-2"/>
            <button type="submit" class="btn btn-primary">Shrink</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Creation Time</th>
                <th>Previous Hour Visits</th>
                <th>Total Visits</th>
            </thead>
            <tbody>
                <% shortURLs.forEach(shortURL => { %>
                    <tr>
                        <td><a href="<%= shortURL.fullURL %>"><%= shortURL.fullURL %></a></td>
                        <td><a href="<%= shortURL.shortURL %>"><%= shortURL.shortURL %></a></td>
                        <td><a href="<%= shortURL.creationTime %>"><%= shortURL.creationTime %></a></td>
                        <td><a href="<%= shortURL.previousHourVisits %>"><%= shortURL.previousHourVisits %></a></td>
                        <td><a href="<%= shortURL.totalVisits %>"><%= shortURL.totalVisits %></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>